<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouritePlaceActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:id="@+id/addlat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/addLong"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_below="@id/addlat"
        />

    <EditText
        android:id="@+id/edtFavouritePlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addLong"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:hint="Enter Place Name"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add to favourite"
        android:id="@+id/btnFvrt"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtFavouritePlace" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txtFvrtPlace"
        android:layout_below="@id/btnFvrt"
        android:layout_height="wrap_content" />

</RelativeLayout>